<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.istream.client.controller.ArtistsViewController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <spacing>20.0</spacing>
    <alignment>CENTER</alignment>    
    <Label text="Artists">
        <font>
            <Font name="Arial BOLD" size="24.0"/>
        </font>
    </Label>
    
    <VBox fx:id="artistsContainer" spacing="10.0">
        <ScrollPane fx:id="artistsScrollPane" fitToHeight="true" hbarPolicy="ALWAYS" vbarPolicy="NEVER" 
                    fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <HBox fx:id="artistsBox" spacing="20.0" alignment="CENTER_LEFT" 
                    minWidth="1000"/>
            </content>
        </ScrollPane>
    </VBox>
</VBox> 