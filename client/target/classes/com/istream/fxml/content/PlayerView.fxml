<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<VBox fx:id="root" spacing="10" styleClass="player-view" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.istream.client.controller.PlayerController">
    
    <ListView fx:id="songListView" VBox.vgrow="ALWAYS"/>
    
    <HBox spacing="10" styleClass="player-controls">
        <Button text="▶" onAction="#handlePlay"/>
        <Button text="⏸" onAction="#handlePause"/>
        <Button text="⏹" onAction="#handleStop"/>
    </HBox>
</VBox> 