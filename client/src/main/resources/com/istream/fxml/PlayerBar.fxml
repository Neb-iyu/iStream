<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.istream.client.controller.PlayerBarController"
      styleClass="player-bar"
      spacing="10">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ImageView fx:id="songImage" fitWidth="60" fitHeight="60" preserveRatio="true"/>
        <VBox spacing="5">
            <Label fx:id="songTitle" styleClass="song-title"/>
            <Label fx:id="artistName" styleClass="artist-name"/>
        </VBox>
        <Button fx:id="likeButton" onAction="#handleLike" styleClass="like-button">
            <graphic>
                <ImageView fx:id="likeIcon" fitWidth="20" fitHeight="20" preserveRatio="true">
                    <Image url="@/com/istream/images/heart-outline.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="previousButton" onAction="#handlePrevious" styleClass="control-button">
            <graphic>
                <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                    <Image url="@/com/istream/images/previous.png"/>
                </ImageView>
            </graphic>
        </Button>
        
        <Button fx:id="playPauseButton" onAction="#handlePlayPause" styleClass="control-button">
            <graphic>
                <ImageView fx:id="playPauseIcon" fitWidth="30" fitHeight="30" preserveRatio="true">
                    <Image url="@/com/istream/images/play.png"/>
                </ImageView>
            </graphic>
        </Button>
        
        <Button fx:id="nextButton" onAction="#handleNext" styleClass="control-button">
            <graphic>
                <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                    <Image url="@/com/istream/images/next.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="currentTime" styleClass="time-label"/>
        <Slider fx:id="progressSlider" 
                onMousePressed="#handleSliderPressed"
                onMouseReleased="#handleSliderReleased"
                styleClass="progress-slider"/>
        <Label fx:id="totalTime" styleClass="time-label"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
            <Image url="@/com/istream/images/volume.png"/>
        </ImageView>
        <Slider fx:id="volumeSlider" 
                onValueChanged="#handleVolumeChange"
                styleClass="volume-slider"/>
    </HBox>

    <VBox fx:id="queueContainer" spacing="5" VBox.vgrow="ALWAYS">
        <Label text="Queue" styleClass="queue-title"/>
        <ListView fx:id="queueListView" VBox.vgrow="ALWAYS" styleClass="queue-list"/>
    </VBox>
</VBox> 