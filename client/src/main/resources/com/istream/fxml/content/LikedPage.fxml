<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.istream.client.controller.LikedViewController" styleClass="vbox">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <spacing>20.0</spacing>
    <alignment><Pos value="CENTER"/></alignment>
    
    <Label text="Your Liked Songs" styleClass="title"/>
    
    <VBox fx:id="likedContainer" spacing="10.0" styleClass="vbox">
        <ScrollPane fx:id="likedScrollPane" fitToHeight="true" hbarPolicy="ALWAYS" vbarPolicy="NEVER" 
                    fitToWidth="true" styleClass="scroll-pane">
            <content>
                <HBox fx:id="likedBox" spacing="20.0" alignment="CENTER_LEFT" 
                    minWidth="1000" styleClass="hbox"/>
            </content>
        </ScrollPane>
    </VBox>
</VBox> 