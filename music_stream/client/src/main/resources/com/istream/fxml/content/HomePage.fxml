<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.istream.client.controller.HomeViewController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <spacing>20.0</spacing>
    <alignment><Pos value="CENTER"/></alignment>
    
    <Label text="Welcome to iStream">
        <font>
            <Font name="Arial" size="24.0" weight="BOLD"/>
        </font>
    </Label>
    
    <VBox fx:id="listenAgainContainer" spacing="10.0">
        <Label text="Listen Again">
            <font>
                <Font name="Arial" size="18.0" weight="BOLD"/>
            </font>
        </Label>
        <ScrollPane fitToHeight="true" hbarPolicy="ALWAYS" vbarPolicy="NEVER" 
                    fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <HBox fx:id="listenAgainBox" spacing="20.0" alignment="CENTER_LEFT" 
                    minWidth="1000"/> <!-- Or set to a specific minimum width -->
            </content>
        </ScrollPane>
    </VBox>
    <VBox fx:id="artistsContainer" spacing="10.0">
        <Label text="Artists">
            <font>
                <Font name="Arial" size="18.0" weight="BOLD"/>
            </font>
        </Label>
        <ScrollPane fitToHeight="true" hbarPolicy="ALWAYS" vbarPolicy="NEVER" 
                    fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <HBox fx:id="artistsBox" spacing="20.0" alignment="CENTER_LEFT" 
                    minWidth="1000"/> <!-- Or set to a specific minimum width -->
            </content>
        </ScrollPane>
    </VBox>
    <VBox fx:id="albumsContainer" spacing="10.0">
        <Label text="Albums">
            <font>
                <Font name="Arial" size="18.0" weight="BOLD"/>
            </font>
        </Label>
        <ScrollPane fitToHeight="true" hbarPolicy="ALWAYS" vbarPolicy="NEVER" 
                    fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <HBox fx:id="albumsBox" spacing="20.0" alignment="CENTER_LEFT" 
                    minWidth="1000"/> <!-- Or set to a specific minimum width -->
            </content>
    </VBox>
</VBox>